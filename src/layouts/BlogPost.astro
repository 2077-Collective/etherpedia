---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"posts">["data"];

const { title, description, author, pubDate, updatedDate, heroImage } =
  Astro.props as any;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body
    class="flex flex-col min-h-screen dark dark:bg-zinc-900 dark:text-white"
  >
    <Header />
    <main>
      <article class="mx-auto max-w-screen-md">
        <div class="sm:p-4 max-w-screen-md">
          {
            heroImage && (
              <img class="w-full sm:rounded-xl" src={heroImage} alt="" />
            )
          }
        </div>
        <div class="px-4 mt-4">
          <div class="date">
            <FormattedDate date={pubDate} />
            {
              updatedDate && (
                <div class="last-updated-on">
                  Last updated on <FormattedDate date={updatedDate} />
                </div>
              )
            }
          </div>
          <h1 class="font-bold text-4xl">{title}</h1>
          <p class="italic pb-4">by {author ?? "2077 Collective"}</p>
          <hr class="pb-8" />
          <div class="prose dark:prose-invert">
            <slot />
          </div>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
